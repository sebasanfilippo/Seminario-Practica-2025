<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ar.sizpope.controller.LoginController">
  <center>
    <GridPane hgap="8" vgap="8" style="-fx-padding:24;">
      <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
      <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="usuario@dominio"/>
      <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
      <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
      <Button text="Ingresar" onAction="#onLogin" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
  </center>
</BorderPane>

